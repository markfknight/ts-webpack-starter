{
  "name": "ts-webpack-starter",
  "version": "1.0.0",
  "author": "markfknight (mark@markfknight.com)",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "npm run webpack:dev-server",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "pretest": "npm run lint",
    "test": "jest",
    "build": "npm run webpack",
    "webpack": "webpack --progress --config webpack.prod.ts",
    "webpack:watch": "webpack --progress --watch --config webpack.prod.ts",
    "webpack:dev-server": "webpack-dev-server --open --config webpack.dev.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/markfknight/ts-webpack-starter.git"
  },
  "bugs": {
    "url": "https://github.com/markfknight/ts-webpack-starter/issues"
  },
  "homepage": "https://github.com/markfknight/ts-webpack-starter#readme",
  "devDependencies": {
    "@types/extract-text-webpack-plugin": "^3.0.4",
    "@types/html-webpack-plugin": "^3.2.2",
    "@types/jest": "^25.1.3",
    "@types/mini-css-extract-plugin": "^0.9.1",
    "@types/node": "^12.12.28",
    "@types/uglifyjs-webpack-plugin": "^1.1.0",
    "@types/webpack": "^4.41.6",
    "@types/webpack-dev-server": "^3.10.0",
    "@types/webpack-env": "^1.15.1",
    "@types/webpack-merge": "^4.1.5",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-loader": "^3.0.3",
    "file-loader": "^5.1.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^25.1.0",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.1",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.2",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {},
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "notify": true,
    "rootDir": "src/",
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$"
  }
}

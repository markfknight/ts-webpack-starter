{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "rootDir": "./src/",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "lib": ["es2020", "dom"],
  },
  "exclude": [
    "node_modules",
    "jspm_modules",
    "**/*.spec.*",
    "**/*.test.*",
    "**/__tests__/*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "reportFiles": [
      "src/**/*.{ts,tsx}"
    ]
  }
}

{
  "compilerOptions": {
    "rootDir": "./src/",
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "module": "es2015",
    "jsx": "react",
    "lib": ["es2020", "dom"],
    "typeRoots": [
    ],
    "plugins": [
    ]
  },
  "exclude": [
    "node_modules",
    "jspm_modules",
    "**/*.spec.*",
    "**/*.test.*",
    "**/__tests__/*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "reportFiles": [
      "src/**/*.{ts,tsx}"
    ]
  }
}
